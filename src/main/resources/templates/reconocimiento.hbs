{{#partial "contenido"}}
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Colaborar - NutreVidas</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="/styles/styles.css" rel="stylesheet">
    </head>
    <div class="d-flex flex-column justify-content-center align-items-center pt-3">
        <h1 class="h2">Ingresa los datos del reconocimiento</h1>
        <p class="text-center mb-4">Haga click en el botón debajo para generar reconocimientos</p>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-grow-1 pb-5">
        <form method="POST" action="/reconocimientos" class="col-md-4">
            <input type="number" class="form-control mb-3" id="puntos" name="puntos" placeholder="Ingrese Puntos" required>
            <input type="number" class="form-control mb-3" id="donaciones" name="donaciones" placeholder="Ingrese Donaciones" required>
            <input type="number" class="form-control mb-3" id="maximaCantidad" name="maximaCantidad" placeholder="Ingrese Máxima Cantidad" required>
            <div class="d-flex justify-content-center">
                <button class="btn custom-btn" type="submit">Generar</button>
            </div>
        </form>
    </div>

    {{#if colaboradores.length}}
        <div class="container">
            <h2 class="text-center mt-5">Lista de Colaboradores</h2>
            <div class="row">
                {{#each colaboradores}}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{nombre}} {{apellido}}</h5>
                                <p class="card-text">Contacto: {{contacto}}</p>
                                <p class="card-text">Cantidad de Donaciones: {{donaciones}}</p>
                                <p class="card-text">Puntos: {{puntos}}</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="text-center mt-4">
            <p>No hay colaboradores para mostrar.</p>
        </div>
    {{/if}}
{{/partial}}
{{> templates/base}}
